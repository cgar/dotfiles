# Easier navigation: .., ..., ~ and -
alias ..="cd .."

# The ls family
alias ls='ls --color=auto'
alias la='ls -Al'

# Distro Related
alias upd='sudo aptitude update; sudo aptitude full-upgrade'
alias i='sudo aptitude install'
alias r='sudo aptitude remove'
alias purge='sudo aptitude purge'
alias s='aptitude search'
alias clean='sudo aptitude clean; sudo aptitude autoclean'

# Tarsnap
alias tarhome='sudo tarsnap -c -f $(date +%F)-home --one-file-system /var/backup/home'
alias tarweekly='sudo tarsnap -c -f $(date +%F)-arch-weekly --one-file-system /var/backup/weekly'
alias taretc='sudo tarsnap -c -f $(date +%F)-arch-etc --one-file-system /var/backup/etc'
alias tstats='sudo tarsnap --print-stats'
alias tlist='sudo tarsnap --list-archives'
alias tdel='sudo tarsnap -d -f' 

# Places
alias d="cd ~/Development"
alias dn='cd ~/Git/notes'
alias g="cd ~/Git"
alias gdots="cd ~/Git/dotfiles"
alias 19='cd /mnt/Media/Downloads/Videos/Random/Web/19'

# Apps
alias music='mpd;ncmpcpp'
alias tma='tmux attach -d -t'
alias ums='bash /opt/ums-4.1.3/UMS.sh &'

# Ledger
alias lbal='ledger bal'
alias lprint='ledger print'
alias ledit='vim ~/Documents/ledger/2014.dat'

# Misc
alias getip='curl icanhazip.com'
alias playtng='play -n -c1 synth whitenoise lowpass -1 120 lowpass -1 120 lowpass -1 120 gain +14' # Star-Trek: TNG Enterprise background sound
alias memory='sudo python2 ~/Git/scripts/memory.py'
alias pong='ping -c3 google.com'
alias pwgen='tr -cd '[:alnum:]' < /dev/urandom | fold -w32 | head -n1' # Simple password generator
alias riotgames='livestreamer twitch.tv/riotgames source'
alias t='todo.sh -d /home/cgar/.todo.txt/todo.cfg'

# Igor by Warren Block 
# http://www.wonkity.com/~wblock/igor/
alias igor1='igor -R `find / -name "*.xml"` | less -RS'
alias igor2='igor -Rs `find * -name "*.*"` | less -Rs'
alias igorxml='igor -Rs `find * -name "*.xml"` | less -RS'
alias igormd='igor -Rs `find * -name "*.md"` | less -RS'

# Git
alias gfm='git fetch upstream; git merge upstream/master'
alias grau='git remote add upstream'
alias gco='git checkout'
